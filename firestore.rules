rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /acls/editors {
      allow read: if true;
      allow write: if false;
    }
    match /systems/{systemId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/acls/editors).data.uids.hasAny([request.auth.uid]);
    }
    match /paths/{pathId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/acls/editors).data.uids.hasAny([request.auth.uid]);
    }
  }
}
